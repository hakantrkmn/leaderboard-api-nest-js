{
  "dashboard": {
    "id": null,
    "title": "Leaderboard Security Dashboard",
    "tags": ["leaderboard", "security", "monitoring"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Security Violations Overview",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(leaderboard_replay_attack_attempts_total)",
            "legendFormat": "Replay Attacks"
          },
          {
            "expr": "sum(leaderboard_idempotency_conflicts_total)",
            "legendFormat": "Idempotency Conflicts"
          },
          {
            "expr": "sum(leaderboard_security_validation_failures_total)",
            "legendFormat": "Security Failures"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Replay Attack Attempts",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(rate(leaderboard_replay_attack_attempts_total[5m])) by (reason)",
            "legendFormat": "{{reason}}"
          }
        ],
        "yAxes": [
          {
            "label": "Attempts/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "Idempotency Conflicts",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(rate(leaderboard_idempotency_conflicts_total[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Conflicts/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Security Validation Failures",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "sum(rate(leaderboard_security_validation_failures_total[5m])) by (validation_type)",
            "legendFormat": "{{validation_type}}"
          }
        ],
        "yAxes": [
          {
            "label": "Failures/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "Request Timestamp Age Distribution",
        "type": "heatmap",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "sum(rate(leaderboard_request_timestamp_age_seconds_bucket[5m])) by (le, endpoint)",
            "format": "heatmap"
          }
        ]
      }
    ]
  }
}
